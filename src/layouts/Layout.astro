---
import '../styles/global.css' 

interface Props {
	title: string;
}
const { title } = Astro.props 
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="Transformamos ideas en marcas digitales seguras, memorables y de alto impacto.">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<slot />
		</main>
	</body>
</html>
